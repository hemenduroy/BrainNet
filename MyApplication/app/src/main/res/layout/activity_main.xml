<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/receive_brain_signals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Brain Signals"
        android:layout_centerInParent="true"
        android:layout_margin="30dp" />

    <Button
        android:id="@+id/classify_brain_signals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classify Brain Signals"
        android:layout_below="@+id/receive_brain_signals"
        android:layout_centerInParent="true"
        android:layout_margin="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classified_data"
        android:layout_below="@+id/classify_brain_signals"
        android:layout_centerInParent="true"
        android:layout_margin="30dp" />

</RelativeLayout>